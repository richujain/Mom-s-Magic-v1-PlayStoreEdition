<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pulimoottil.richu.momsmagic_indianfoodrecipe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.YoutubeFoodRecipe"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize" />
        <activity
            android:name=".activity.YoutubeFoodRecipeSearch"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize" />
        <activity
            android:name=".activity.GroceryListActivity"
            android:label="@string/title_activity_grocery_list"
            android:theme="@style/AppTheme" />

        <provider
            android:name=".activity.GroceryProvider"
            android:authorities="com.pulimoottil.richu.momsmagic_indianfoodrecipe"
            android:exported="false" />

        <activity android:name=".activity.ReportProblem" />
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.CreditsActivity" />
        <activity
            android:name=".activity.FirstTutorialActivity"
            android:theme="@style/tutorial" />
        <activity
            android:name=".activity.SecondTutorialActivity"
            android:theme="@style/tutorial" />
        <activity
            android:name=".activity.ThirdTutorialActivity"
            android:theme="@style/tutorial" />
    </application>

</manifest>